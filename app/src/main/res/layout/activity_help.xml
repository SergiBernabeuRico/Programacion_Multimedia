<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="Cómo usar la app:\n\n1) Elige el tipo de conversión (Spinner).\n2) Selecciona la dirección (RadioButtons).\n3) Introduce un valor numérico (>=1).\n4) Pulsa Convertir.\n\nMensajes de error:\n- “El valor no puede estar vacío”.\n- “Sólo números >=1”.\n- “Valor no válido”."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
