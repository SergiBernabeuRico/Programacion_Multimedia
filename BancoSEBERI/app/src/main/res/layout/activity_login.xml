<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- Barra morada superior, pegada arriba y más alta -->
    <TextView
        android:id="@+id/txtBarraLogin"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/purple_500"
        android:text="Banco-SEBERI"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="bottom|start"
        android:paddingStart="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título Iniciar sesión -->
    <TextView
        android:id="@+id/txtTituloLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtBarraLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Usuario -->
    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Usuario"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/txtTituloLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Password -->
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/edtUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón ENTRAR -->
    <Button
        android:id="@+id/btnEntrarLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:background="@color/purple_500"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSalirLogin"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Botón SALIR -->
    <Button
        android:id="@+id/btnSalirLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:background="@color/purple_500"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toEndOf="@id/btnEntrarLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
