<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Barra de título de la calculadora -->
    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/purple_500"
        android:text="@string/t3a4_calculadora"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clickable="false"
        android:focusable="false"
        android:inputType="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pantalla de la calculadora -->
    <EditText
        android:id="@+id/txtPantalla"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"
        android:clickable="false"
        android:focusable="false"
        android:gravity="end|center_vertical"
        android:inputType="none"
        android:padding="16dp"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Zona de botones (4 filas) -->
    <TableLayout
        android:id="@+id/tableLayoutCalc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:stretchColumns="0,1,2,3"
        app:layout_constraintTop_toBottomOf="@id/txtPantalla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnIgual">

        <!-- Fila 1: 7 8 9 + -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="8"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="9"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btnSuma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="+"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />
        </TableRow>

        <!-- Fila 2: 4 5 6 - -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="4"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="6"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btnResta"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="-"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />
        </TableRow>

        <!-- Fila 3: 1 2 3 * -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="1"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="3"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btnMultiplica"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="*"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />
        </TableRow>

        <!-- Fila 4: . 0 C / -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="."
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="C"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="/"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_calc" />
        </TableRow>

    </TableLayout>

    <!-- Botón "=" ocupando todo el ancho -->
    <Button
        android:id="@+id/btnIgual"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:text="="
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button_calc"
        app:layout_constraintTop_toBottomOf="@id/tableLayoutCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
